<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="
     http://www.liquibase.org/xml/ns/dbchangelog
     http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="create-booking" author="atc">
        <createTable tableName="booking">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="user_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>

            <column name="event_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>

            <!-- Status: PENDING / CONFIRMED / CANCELLED -->
            <column name="status" type="VARCHAR(20)">
                <constraints nullable="false"/>
            </column>

            <column name="total_amount" type="NUMERIC(12,2)">
                <constraints nullable="false"/>
            </column>
            <column name="currency" type="VARCHAR(3)">
                <constraints nullable="false"/>
            </column>

            <column name="created_at" type="TIMESTAMP WITH TIME ZONE" defaultValueDate="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <!-- Indices for common lookups -->
        <createIndex tableName="booking" indexName="idx_booking_user">
            <column name="user_id"/>
        </createIndex>
        <createIndex tableName="booking" indexName="idx_booking_event">
            <column name="event_id"/>
        </createIndex>
        <createIndex tableName="booking" indexName="idx_booking_status">
            <column name="status"/>
        </createIndex>


    </changeSet>
</databaseChangeLog>
