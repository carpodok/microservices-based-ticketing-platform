<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="
     http://www.liquibase.org/xml/ns/dbchangelog
     http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="create-event-seat" author="atc">
        <createTable tableName="event_seat">
            <column name="id"         type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="event_id"    type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="seat_label"  type="VARCHAR(20)">
                <constraints nullable="false"/>
            </column>
            <column name="tier_id"     type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="state"  type="VARCHAR(20)">
                <!-- states like FREE, LOCKED, SOLD -->
                <constraints nullable="false"/>
            </column>
        </createTable>

        <!-- ensure one row per seat per event -->
        <addUniqueConstraint tableName="event_seat"
                             columnNames="event_id, seat_label"
                             constraintName="uk_event_seat_unique"/>

        <createIndex tableName="event_seat"
                     indexName="idx_event_seat_event">
            <column name="event_id"/>
        </createIndex>
    </changeSet>
</databaseChangeLog>
